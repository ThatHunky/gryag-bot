# Змінні середовища для Gryag Bot Docker

# === ОБОВ'ЯЗКОВІ НАЛАШТУВАННЯ ===

# Telegram Bot Token (отримайте у @BotFather)
BOT_TOKEN=your_bot_token_here

# Google Gemini API Key (отримайте у Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# ID адміністраторів бота (через кому)
ADMIN_USER_IDS=123456789,987654321

# Username бота (без символу @)
BOT_USERNAME=your_bot_username

# === НАЛАШТУВАННЯ КОНТЕКСТУ ===

# Максимальна кількість повідомлень у контексті чату
MAX_CONTEXT_MESSAGES=100

# Кількість повідомлень для AI аналізу
CONTEXT_MESSAGES_FOR_AI=20

# === GOOGLE SEARCH API (ОПЦІОНАЛЬНО) ===

# Google Search API Key
GOOGLE_SEARCH_API_KEY=your_google_search_api_key

# Google Search Engine ID
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# === НАЛАШТУВАННЯ АВТООНОВЛЕННЯ ===

# GitHub репозиторій для автооновлення
GITHUB_REPO=https://github.com/yourusername/gryag-bot.git

# Гілка для автооновлення
GIT_BRANCH=main

# Увімкнути автооновлення (true/false)
AUTO_UPDATE_ENABLED=true

# Час автооновлення (у форматі HH:MM)
UPDATE_TIME=03:00

# ID чату для повідомлень про оновлення (опціонально)
UPDATE_NOTIFICATION_CHAT_ID=your_chat_id

# === СИСТЕМНІ НАЛАШТУВАННЯ ===

# Часовий пояс
TZ=Europe/Kiev

# Рівень логування (debug, info, warn, error)
LOG_LEVEL=info

# === НАЛАШТУВАННЯ DOCKER ===

# Обмеження пам'яті (в мегабайтах)
MEMORY_LIMIT=512

# Обмеження CPU (частка від 1.0)
CPU_LIMIT=0.5
